							bw.write((appsByArea.get(i).get(j).getAppLocation()) + ",");
							bw.write(appsByArea.get(i).get(j).getAppName() + ",");
							bw.write(appsByArea.get(i).get(j).getOnWatt() + ",");
							bw.write(appsByArea.get(i).get(j).getOnProb() + ",");
